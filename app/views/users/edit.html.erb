<% provide(:title, "Edit account") %>
<% provide(:main_class_modifier, "--dashboard") %>
<div class="dashboard">
	<%= render 'shared/dashboard_sidebar' %>
	<div class="dashboard__content">
		<div class="dashboard__content--settings">
			<div class="pagelet">
				<div class="pagelet__header"><i class="fa fa-cog"></i>Update Account</div>
				<div class="pagelet__body">
					<%= form_for @user, html: { class: "settings-form" } do |f| %>
					<%= render 'shared/error_messages' %>
						<div class="settings-form__section first">
							<h3><i class="fa fa-user"></i>Edit Account Credentials</h3>
							<div class="settings-form__section--group">
								<div class="input-group">
									<%= f.label :name %>
									<%= f.text_field :name, :placeholder => "Full Name" %>
								</div>
								<div class="input-group">
									<%= f.label :username %>
									<%= f.text_field :username %>
								</div>
							</div>
							<div class="settings-form__section--group">
								<%= f.label :email %>
								<%= f.text_field :email, :placeholder => "name@example.com" %>
							</div>
						</div>
						<div class="settings-form__section">
							<h3><i class="fa fa-lock"></i>Change Password <span>(must be 6 or more characters)</span></h3>
							<div class="settings-form__section--group">
								<div class="input-group">
									<%= f.label :password %>
									<%= f.password_field :password %>
								</div>
								<div class="input-group">
									<%= f.label :password_confirmation, "Confirm Password" %>
									<%= f.password_field :password_confirmation %>
								</div>
							</div>
						</div>
						<div class="settings-form__section">
							<h3><i class="fa fa-list-alt"></i>Edit Profile Info</h3>
							<div class="settings-form__section--group">
								<div class="input-group where">
									<div class="input-group">
										<%= f.label :user_location, "Where are you?" %>
										<%= f.text_field :user_location %>
									</div>
									<a href="" class="btn btn__info"><i class="fa fa-map-marker"></i></a>
								</div>
							</div>
							<div class="settings-form__section--group">
								<%= f.label :about_me, 'About Me<span class="character-count">160 char. left</span>'.html_safe %>
								<%= f.text_area :about_me, size: "3x3" %>
							</div>
							<div class="settings-form__section--group">
								<%= f.label :website, "Your Website" %>
								<%= f.text_field :website %>
							</div>
						</div>
						 <%= f.submit "Submit Changes", class: "btn btn__submit btn__lg btn__primary" %>
					<% end %>

					<!-- <div class="gravatar_edit">
						<%= gravatar_for @user %>
						<a href="http://gravatar.com/emails" target=_blank>change</a>
					</div> -->

				</div>
			</div>
		</div>
	</div>
</div>




